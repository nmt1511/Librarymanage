<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/green"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,\nYou"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_person" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/lightGreen"
            android:drawableTop="@drawable/ic_category"
            android:drawableTint="@color/black"
            android:elevation="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:stateListAnimator="@null"
            android:padding="30dp"
            android:text="Danh Mục"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btn_search"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:backgroundTint="@color/lightGreen"
            android:drawableTop="@drawable/ic_search"
            android:drawableTint="@color/black"
            android:elevation="10dp"

            android:text="Tìm Kiếm"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:stateListAnimator="@null"

            android:padding="30dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_gio_background"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_aboutlibrary"
            android:stateListAnimator="@null"
            android:text="Sách Mới"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:cornerRadius="15dp" />
        <Button
            android:id="@+id/btn_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_aboutlibrary"
            android:stateListAnimator="@null"
            android:text="Thông Tin"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="19dp"
            app:cornerRadius="15dp" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nổi Bật"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_open_book" />

        <TextView
            android:id="@+id/nearDoctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 bài code thiếu nhi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nearDoctorSpeciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dental Specialist"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

<!--            <ImageView-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="16dp"-->
<!--                android:src="@drawable/baseline_clear_24" />-->

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="rất hay và ý nghĩa"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/danhmuc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    </LinearLayout>
    </LinearLayout>
</ScrollView>